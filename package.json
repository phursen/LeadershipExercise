{
  "name": "electric-maze",
  "version": "1.0.0",
  "description": "Virtual Electric Maze team building exercise",
  "type": "module",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "server": "tsx server.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-all": "npm run build && electron-builder --mac --win"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.10",
    "@mui/material": "^5.14.10",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electricmaze.app",
    "productName": "Electric Maze",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "server.js",
      "package.json",
      "src/config/electric-maze-config-onload.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        },
        {
          "target": "zip", 
          "arch": ["x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": null
  }
}
